{
  "manifest_version": 3,
  "name": "ClearTerms",
  "version": "0.2.0",
  "description": "Detects legal pages and prepares ClearTerms consent flow.",
  "action": {
    "default_title": "ClearTerms",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
